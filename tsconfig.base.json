{
  "compilerOptions": {
    "rootDir": "src",
    "target": "es2020",
    "module": "nodenext",
    "outDir": "./dist",
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "nodenext",
    "forceConsistentCasingInFileNames": true
  },
}
