{
    "extends": "./tsconfig.base.json",
    "include": [
        "eslint.config.ts",
        "playwright.config.ts",
        "vitest.config.ts",
        "./test/**/*.test.ts",
        "./test/**/*.ts",
        "./packages/*/src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/dist",
        "**/build"
    ],
    "compilerOptions": {
        "rootDir": ".",
        "allowJs": true,
        "noEmit": true
    }
}
